<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <!-- Vize notunu girmek için EditText -->
    <EditText
        android:id="@+id/vizeNotu"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Vize Notu"
        android:inputType="number"
        android:padding="16dp"
        android:minHeight="48dp"
        android:minWidth="200dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="16dp" />

    <!-- Final notunu girmek için EditText -->
    <EditText
        android:id="@+id/finalNotu"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Final Notu"
        android:inputType="number"
        android:padding="16dp"
        android:minHeight="48dp"
        android:minWidth="200dp"
        app:layout_constraintTop_toBottomOf="@id/vizeNotu"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="16dp" />

    <!-- Hesapla butonu -->
    <Button
        android:id="@+id/hesaplaButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Hesapla"
        android:padding="16dp"
        android:minHeight="48dp"
        android:minWidth="200dp"
        app:layout_constraintTop_toBottomOf="@id/finalNotu"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp" />

    <!-- Sonucu göstermek için TextView -->
    <TextView
        android:id="@+id/sonucText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sonuç"
        app:layout_constraintTop_toBottomOf="@id/hesaplaButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp" />

</androidx.constraintlayout.widget.ConstraintLayout>
